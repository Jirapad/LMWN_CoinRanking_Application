<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <ImageView
        android:id="@+id/coinIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/coinName"
        android:maxLines="1"
        android:text="@string/coin_name"
        style="@style/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/coinIcon"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/coinSymbol"
        android:text="@string/coin_symbol"
        style="@style/coinSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coinName"
        android:layout_alignLeft="@id/coinName"
        android:layout_marginTop="12dp"/>
    <View
        android:background="@color/line_color"
        android:layout_below="@id/coinSymbol"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

</RelativeLayout>